<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
      <% if params[:plan] == '2' %>
        <h1>Pro Account</h1>
        <h4>Sign up for our premium account which is very useful for viewing each developers contact information</h4>
      <% else %>
        <h1>Basic Account</h1>
        <h4>Sign up for free basic access to the community for developers.  You cannot see each users information.</h4>
      <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
